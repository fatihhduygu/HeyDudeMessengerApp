<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252C2C">

    <TextView
        android:id="@+id/signInFourthPageText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile info"
        android:textColor="@color/appTextColor"
        android:textSize="21sp"
        android:fontFamily="@font/robotoregular"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/signInFourthPageText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please provide your name and optional profile photo"
        android:textColor="@color/appTextColor"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/robotoregular"
        app:layout_constraintTop_toBottomOf="@id/signInFourthPageText1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/signInFourthPageProfileImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="@id/signInFourthPageText2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/profileinfo"
        android:layout_marginTop="50dp"
        />


    <EditText
        android:id="@+id/sign_in_fragment_fourth_page_username"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Type your name here"
        android:textColor="@color/appTextColor"
        android:textSize="16sp"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColorHint="@color/appTextColor"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/signInFourthPageProfileImageView"/>






    <Button
        android:id="@+id/signInFourthPageNextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/next_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="NEXT"
        android:textColor="@color/appSecondTextColor"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_fragment_fourth_page_username"
        android:layout_marginTop="100dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>